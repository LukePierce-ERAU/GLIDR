function [y,L_D] = sadglide(ic,DESIGN,ii)


dh = 1000;
ind = round(ic(2)/dh)
y = zeros(4,ind);

for jj  = 1:ind
    [T, a, P, rho, nu, mu] = atmosisa(y(jj,2), 'extended', true);
    V = sqrt(y(jj,3)^2+y(jj,4)^2);
    W = DESIGN.m.*DESIGN.g;
    gamma = -4.*pi/180;

cD = 0.05;
cL = 2.*W.*cos(gamma)./(rho.*V^2.*DESIGN.S(ii));

L_D = cL/cD;
dx = dh.*L_D;

if jj == 1
    y(jj,1) = dx;
else
y(jj,1) = y(jj-1,1) + dx;
end


end
end